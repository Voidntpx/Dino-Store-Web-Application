<div class="container">
<div class="row">
<div class="column" id="col-sm-12 col-md-12"></div>
<div class="column">
    <div class="col-sm-12 col-md-12" id="checkin"> 
        <br><br><br>
        <h1>Checkout</h1>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label for="name"><h3>Name</h3></label>
                        <input type="text" id="name" class="form-control" required name="name">
                    </div>
                </div>
                <p></p>
                <div class="col-12">
                    <div class="form-group">
                        <label for="address"><h3>Address</h3></label>
                        <input type="text" id="address" class="form-control" required name="address">
                    </div>
                </div>
                <p></p>
                <div class="col-12">
                    <div class="form-group">
                        <label for="card-name"><h3>Card Holder Name</h3></label>
                        <input type="text" id="card-name" class="form-control" required>
                    </div>
                </div>
                <p></p>
                <div class="col-12">
                    <div class="form-group">
                        <label for="card-number"><h3>Credit Card Number</h3></label>
                        <input type="text" id="card-number" class="form-control" required>
                    </div>
                </div>
                <p></p>

                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="card-expiry-month"><h3>Expiration Month</h3></label>
                                <input type="text" id="card-expiry-month" class="form-control" required>
                            </div>
                        </div>
                       
                        <div class="col-6">
                            <div class="form-group">
                                <label for="card-expiry-year"><h3>Expiration Year</h3></label>
                                <input type="text" id="card-expiry-year" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </div>
                
                <p></p>
                <div class="col-12">
                    <div class="form-group">
                        <label for="card-cvc"><h3>CVC</h3></label>
                        <input type="text" id="card-cvc" class="form-control" required>
                    </div>
                </div>
            </div>
            <p></p>
            <button type="submit" class="btn btn-success">Buy now</button>
        </form>
        <br><br>
    </div>
</div>

</div>
</div>
